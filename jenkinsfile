pipeline {
    agent any  // This specifies that the pipeline can run on any available agent

    parameters {
        choice(name: 'action', choices: ['apply', 'destroy'], description: 'Pick something')
    }

    stages {
        stage('Init') {
            steps {
                sh """
                    cd vpc
                    terraform init -reconfigure
                """
            }
        }
    }
}
